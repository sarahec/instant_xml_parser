import 'package:generator/src/source_gen/field_source_gen.dart';
import 'package:generator/src/symtable/field_entry.dart';
import 'package:mockito/mockito.dart';
import 'package:test/test.dart';

void main() {
  group('variables', () {
    var fieldFoo;

    setUp(() {
      fieldFoo = FieldEntry((b) => ;
      when(fieldFoo.name).thenReturn('foo');
      when(fieldFoo.initVar).thenReturn(false);
    });

    test('generates plain var', () {
      var gen = FieldSourceGen.fromField(fieldFoo);
      expect(gen.vardecl, equals('var foo;'));
    });
  });
}
